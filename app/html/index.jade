									a(href="#").content-right-found-more Подробнее
									.content-right-found-get
										.content-right-found-get-type
											.content-right-found-get-title Тип экскурсии
											.content-right-found-get-type-wraper
												.content-right-found-get-type-el
													i.fa.fa-check
													span 1-5 человек
												.content-right-found-get-type-el
													i.fa.fa-check
													span Автобусная
												.content-right-found-get-type-el
													i.fa.fa-check
													span 10 часов
										.content-right-found-get-price

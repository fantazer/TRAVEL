														option 1
														option 2
														option 3
													select(name="").dropdown
														option Дети
														option нет
														option 1
														option 2
														option 3
											.form-block-row
												label Время экскурсии
												select(name="").dropdown
													option 10:00
													option 11:00
													option 12:00
											.form-block-row
												label Язык экскурсии
												select(name="").dropdown
													option Русский
													option Английски
													option Немецкий
											.form-block-row
												label Место встречи
												input(type="text" placeholder="Вы можете указать место встречи. Наш менеджер свяжется с Вами.")
